<?xml version="1.0" encoding="UTF-8"?>
<!--

============================
	THEME FILE FOR ALEPHNOTE  
============================

Theme:      AlephNote default theme

Repository: https://github.com/Mikescher/AlephNote

-->
<theme>
	<meta>
		<name>Default</name>
		<version>1.0</version>
		<compatibility>1.6.X</compatibility>
	</meta>

	<ref>
		<!-- -->
	</ref>

	<data>

		<group name="scintilla">

			<property name="scintilla.background"            value="#FFFFFF"/>
			
			<property name="scintilla.whitespace:size"       value="1"/>
			<property name="scintilla.whitespace:color"      value="#FFC355"/>
			<property name="scintilla.whitespace:background" value="transparent"/>

			<property name="scintilla.margin.linenumbers:background" value="#000000"/>
				
			<property name="scintilla.margin.listsymbols:background" value="#000000"/>

			<property name="scintilla.caret:foreground"       value="$scintilla.default:foreground"/>
			<property name="scintilla.caret:background"       value="#FFFF00"/>
			<property name="scintilla.caret:background_alpha" value="256"/>
			<property name="scintilla.caret:visible"          value="false"/>

			<group name="default">
				<property name="scintilla.default:foreground" value="#000000"/>
				<property name="scintilla.default:underline"  value="false"/>
				<property name="scintilla.default:background" value="$scintilla.background"/>
				<property name="scintilla.default:bold"       value="false"/>
				<property name="scintilla.default:italic"     value="false"/>
			</group>
			
			<group name="link">
				<property name="scintilla.link:foreground" value="#0000FF"/>
				<property name="scintilla.link:underline"  value="true"/>
				<property name="scintilla.link:background" value="$scintilla.background"/>
				<property name="scintilla.link:bold"       value="false"/>
				<property name="scintilla.link:italic"     value="false"/>
			</group>

			<group name="markdown">
				<property name="scintilla.markdown.default:foreground"     value="$scintilla.default:foreground"/>
				<property name="scintilla.markdown.default:underline"      value="false"/>
				<property name="scintilla.markdown.default:background"     value="$scintilla.background"/>
				<property name="scintilla.markdown.default:bold"           value="false"/>
				<property name="scintilla.markdown.default:italic"         value="false"/>

				<property name="scintilla.markdown.emph:foreground"        value="$scintilla.markdown.default:foreground"/>
				<property name="scintilla.markdown.emph:underline"         value="false"/>
				<property name="scintilla.markdown.emph:background"        value="$scintilla.markdown.default:background"/>
				<property name="scintilla.markdown.emph:bold"              value="false"/>
				<property name="scintilla.markdown.emph:italic"            value="true"/>

				<property name="scintilla.markdown.strong_emph:foreground" value="$scintilla.markdown.default:foreground"/>
				<property name="scintilla.markdown.strong_emph:underline"  value="false"/>
				<property name="scintilla.markdown.strong_emph:background" value="$scintilla.markdown.default:background"/>
				<property name="scintilla.markdown.strong_emph:bold"       value="true"/>
				<property name="scintilla.markdown.strong_emph:italic"     value="false"/>

				<property name="scintilla.markdown.header:foreground"      value="#B22222"/>
				<property name="scintilla.markdown.header:underline"       value="false"/>
				<property name="scintilla.markdown.header:background"      value="$scintilla.markdown.default:background"/>
				<property name="scintilla.markdown.header:bold"            value="false"/>
				<property name="scintilla.markdown.header:italic"          value="false"/>

				<property name="scintilla.markdown.code:foreground"        value="#008000"/>
				<property name="scintilla.markdown.code:underline"         value="false"/>
				<property name="scintilla.markdown.code:background"        value="$scintilla.markdown.default:background"/>
				<property name="scintilla.markdown.code:bold"              value="false"/>
				<property name="scintilla.markdown.code:italic"            value="false"/>

				<property name="scintilla.markdown.list:foreground"        value="#808080"/>
				<property name="scintilla.markdown.list:underline"         value="false"/>
				<property name="scintilla.markdown.list:background"        value="$scintilla.markdown.default:background"/>
				<property name="scintilla.markdown.list:bold"              value="false"/>
				<property name="scintilla.markdown.list:italic"            value="false"/>

				<property name="scintilla.markdown.url:foreground"         value="#0000FF"/>
				<property name="scintilla.markdown.url:underline"          value="false"/>
				<property name="scintilla.markdown.url:background"         value="$scintilla.markdown.default:background"/>
				<property name="scintilla.markdown.url:bold"               value="false"/>
				<property name="scintilla.markdown.url:italic"             value="false"/>
			</group>

			<group name="search">
				<property name="scintilla.search.local:color"          value="#FF0000"/>
				<property name="scintilla.search.local:alpha"          value="64"/>
				<property name="scintilla.search.local:outline_alpha"  value="196"/>
				<property name="scintilla.search.local:under_text"     value="true"/>

				<property name="scintilla.search.global:color"         value="#006400"/>
				<property name="scintilla.search.global:alpha"         value="96"/>
				<property name="scintilla.search.global:outline_alpha" value="196"/>
				<property name="scintilla.search.global:under_text"    value="true"/>
			</group>
			
		</group>

		<group name="window">
			
			<property name="window.background"            value="#FFFFFF"/>
			<property name="window.foreground"            value="#000000"/>

			<property name="window.notetitle:foreground"  value="#FF6495ED"/>
			<property name="window.changedate:foreground" value="#FFA9A9A9"/>

			<group name="tageditor">
				<property name="window.tageditor.popup:background"            value="#EEEEEE"/>
				<property name="window.tageditor.popup:bordercolor"           value="#D3D3D3"/>
				<property name="window.tageditor.popup:foreground"            value="$window.foreground"/>

				<property name="window.tageditor.placeholder"                 value="#888888"/>
				<property name="window.tageditor.foreground"                  value="$window.foreground"/>

				<property name="window.tageditor.tag:background"              value="#FFF5EE"/>
				<property name="window.tageditor.tag:bordercolor_default"     value="#D3D3D3"/>
				<property name="window.tageditor.tag:bordercolor_highlighted" value="#000000"/>
				<property name="window.tageditor.tag:foreground"              value="$window.foreground"/>
			</group>

			<group name="pathdisplay">
				<property name="window.pathdisplay:foregroud"                 value="$window.foreground"/>

				<property name="window.pathdisplay.element:foregroud"         value="$window.foreground"/>
				<property name="window.pathdisplay.element:background"        value="$window.background"/>
				<property name="window.pathdisplay.element:background_hover"  value="#FAF0E6"/>
				<property name="window.pathdisplay.element:border"            value="#D3D3D3"/>

				<property name="window.pathdisplay.button:foreground"         value="#000000"/>
				<property name="window.pathdisplay.button:background"         value="#FFFFFF"/>
				<property name="window.pathdisplay.button:border"             value="#707070"/>

				<property name="window.pathdisplay.popup:background"          value="#F5F5DC"/>
				<property name="window.pathdisplay.popup.text:foreground"     value="$window.foreground"/>
				<property name="window.pathdisplay.popup.list:foreground"     value="$window.foreground"/>
				<property name="window.pathdisplay.popup.list:background"     value="$window.background"/>
				<property name="window.pathdisplay.popup.button:foreground"   value="#000000"/>
				<property name="window.pathdisplay.popup.button:background"   value="#FFFFFF"/>
				<property name="window.pathdisplay.popup.button:border"       value="#F5F5DC"/>
			</group>

			<group name="inlinesearch">
				<property name="window.inlinesearch:background"               value="#DCDCDC"/>
				<property name="window.inlinesearch:foreground"               value="#000000"/>
				<property name="window.inlinesearch.textbox:background"       value="#FFFFFF"/>
				<property name="window.inlinesearch.textbox:foreground"       value="#000000"/>
				<property name="window.inlinesearch.btnSearch:background"     value="transparent"/>
				<property name="window.inlinesearch.btnSearch:foreground"     value="#000000"/>
				<property name="window.inlinesearch.btnCaseIns:background"    value="transparent"/>
				<property name="window.inlinesearch.btnCaseIns:foreground"    value="#000000"/>
				<property name="window.inlinesearch.btnWholeWord:background"  value="transparent"/>
				<property name="window.inlinesearch.btnWholeWord:foreground"  value="#000000"/>
				<property name="window.inlinesearch.btnRegex:background"      value="transparent"/>
				<property name="window.inlinesearch.btnRegex:foreground"      value="#000000"/>
			</group>

		</group>
		
	</data>
</theme>