<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<meta>
		<name>Hide scrollbars</name>
		<version>1.2</version>
		<compatibility>1.6.35+</compatibility>
		<author>Mike Schw√∂rer</author>
		<type>modifier</type>
		<description>Hide both scrollbars from main edit control and the notes list</description>
	</meta>

	<data>
		<property name="scintilla.scrollbar_h:visible"                         value="false"/>
		<property name="scintilla.scrollbar_v:visible"                         value="false"/>
		
		<property name="window.notesview.flat.scrollbar_v:visible"             value="false"/>
		
		<property name="window.notesview.hierarchical.list.scrollbar_v:visible" value="false"/>
		
		<property name="window.notesview.hierarchical.tree.scrollbar_v:visible" value="false"/>
	</data>
</theme>